generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  user_id       String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  listas        Listas[]
}

model Listas {
  list_id        String  @id @default(uuid())
  name           String
  category       String
  describle      String
  itens_quantity Int?    @default(0)
  itens          Itens[]
  user           Users?  @relation(fields: [usersId], references: [user_id], onDelete: Cascade)
  usersId        String?
}

model Itens {
  itens_id     String  @id @default(uuid())
  name         String
  sub_category String
  quantity     Int
  lista        Listas? @relation(fields: [listasId], references: [list_id], onDelete: Cascade)
  listasId     String?
}
